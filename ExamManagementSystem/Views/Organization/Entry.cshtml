@model Models.Organization

@{
    ViewBag.Title = "Organization Entry";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <h1>
        Entry Form
        <small>Organization</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Organization</li>
        <li class="active">Entry</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <section class="col-lg-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Organization Entry Form</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="#" class="form-horizontal" method="post">
                    <div class="box-body">
                        @Html.ValidationSummary(true, null, htmlAttributes: new { @class = "text-center text-danger" })
                        <div class="form-group">
                            <label for="Name" class="col-sm-3 control-label">Name</label>

                            <div class="col-sm-7">
                                @Html.TextBoxFor(c => c.Name, new {@class = "form-control", id = "Name", placeholder="Enter Organization Name"})
                                @Html.ValidationMessageFor(c => c.Name, null, new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Code" class="col-sm-3 control-label">Code</label>

                            <div class="col-sm-4">
                                @Html.TextBoxFor(c => c.Code, new { @class = "form-control", id = "Code", placeholder = "Enter Organization Code" })
                                @Html.ValidationMessageFor(c => c.Code, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Address" class="col-sm-3 control-label">Address</label>

                            <div class="col-sm-7">
                                @Html.TextBoxFor(c => c.Address, new { @class = "form-control", id = "Address", placeholder = "Enter Organization Address" })
                                @Html.ValidationMessageFor(c => c.Address, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ContactNo" class="col-sm-3 control-label">Contact Number</label>

                            <div class="col-sm-7">
                                @Html.TextBoxFor(c => c.ContactNo, new { @class = "form-control", id = "ContactNo", placeholder = "Enter Organization Contact Number" })
                                @Html.ValidationMessageFor(c => c.ContactNo, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="About" class="col-sm-3 control-label">About</label>

                            <div class="col-sm-7">
                                @Html.TextAreaFor(c => c.About, new { @class = "form-control", id = "About", placeholder = "Write Something About this Organization", rows="3" })
                                @Html.ValidationMessageFor(c => c.About, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Logo" class="col-sm-3 control-label">Logo</label>

                            <div class="col-sm-7">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <img class="img-bordered img-responsive" style="height: 156px; width: 156px;" id="output" />
                                    </div>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(c => c.Logo, new { @class = "form-control", id = "Logo", placeholder = "Enter Organization Logo"})
                                        @Html.ValidationMessageFor(c => c.Logo, null, new { @class = "text-danger" })
                                        <!--<input type="file" class="form-control-static" name="profilePic" accept="image/gif, image/jpeg, image/png" />-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info pull-right">Save</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </section>
        <!-- /.Main Board -->
        <!-- right col -->
    </div>
    <!-- /.row (main row) -->
</section>

<script>
  
    //Image Dispage script
    var loadFile = function(event) {
        var reader = new FileReader();
        reader.onload = function(){
            var output = document.getElementById('output');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    };
</script>