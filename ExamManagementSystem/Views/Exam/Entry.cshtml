@model Models.Exam

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<section class="content-header">
    <h1>
        Entry Page
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <section class="col-lg-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Exam Entry Form</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                       
                        <div class="form-group">
                            <label for="Organization" class="col-sm-3 control-label">Organization</label>

                            <div class="col-sm-7">
                                <select class="form-control">
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Course" class="col-sm-3 control-label">Course</label>

                            <div class="col-sm-7">
                                <select class="form-control">
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ExamType" class="col-sm-3 control-label">Exam Type</label>

                            <div class="col-sm-7">
                                <select class="form-control">
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                    <option value="1">Option1</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Code" class="col-sm-3 control-label">Code</label>

                            <div class="col-sm-4">
                                @*<input type="password" class="form-control"  placeholder="Code">*@
                                @Html.TextBoxFor(c => c.Code, new { @class = "form-control", id = "Code", placeholder = "Enter Exam Code" })
                                @Html.ValidationMessageFor(c => c.Code, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Topics " class="col-sm-3 control-label">Topics</label>

                            <div class="col-sm-7">
                                @*<input type="password" class="form-control"  placeholder="Topic">*@
                                @Html.TextBoxFor(c => c.Topics, new { @class = "form-control", id = "Topics ", placeholder = "Enter Exam Topics " })
                                @Html.ValidationMessageFor(c => c.Topics, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="FullMarks" class="col-sm-3 control-label">Full Marks</label>

                            <div class="col-sm-4">
                                @*<input type="password" class="form-control"  placeholder="Full Marks">*@
                                @Html.TextBoxFor(c => c.FullMarks, new { @class = "form-control", id = "FullMarks ", placeholder = "Enter Exam FullMarks " })
                                @Html.ValidationMessageFor(c => c.FullMarks, null, new { @class = "text-danger" })
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <label for="Duration" class="col-sm-3 control-label">Duration</label>
                            <h4>Customiz korte hobe</h4>
                            
                        </div>
                   
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info col-md-offset-11">Save</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </section>
        <!-- /.Main Board -->
        <!-- right col -->
    </div>
    <!-- /.row (main row) -->
</section>

