        <!-- Left col -->
        <section class="col-lg-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Participant Entry Form</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
